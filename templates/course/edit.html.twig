{% extends 'base.html.twig' %}

{% block title %}{{ 'Изменение курса ' ~ course.name ~ ' / StudyOn' }}{% endblock %}

{% block body %}
    <div class="container">
        <h5>Редактирование курса</h5>
        {{ include('course/_form.html.twig', {'button_label': 'Сохранить изменения'}) }}
    </div>
    <div class="d-flex container">
        {{ include('course/_delete_form.html.twig') }}
        <a class="btn btn-warning m-3 p-3" style="width: 16rem;" role="button" href="{{ path('app_course_show', {'id': course.id}) }}">Вернуться к курсу</a>
    </div>

{% endblock %}