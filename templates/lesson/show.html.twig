{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="lesson-name">{{ lesson.name }}</h1>
        <div class="glass-bg p-4">
            <p class="lesson-content">{{ lesson.content }}</p>

            <div class="d-flex">
                <a class="btn btn-warning m-3 p-3" style="width: 16rem;" role="button" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Изменить урок</a>
                {{ include('lesson/_delete_form.html.twig') }}
            </div>
            <a class="btn btn-warning m-3 p-3" style="width: 16rem;" role="button" href="{{ path('app_course_show', { 'id': lesson.getIdCourse().id }) }}">Вернуться к курсу</a>

        </div>
    </div>
    <style>
        .glass-bg {
            /* From https://css.glass */
            background: rgba(255, 255, 255, 0.6);
            border-radius: 16px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(11.2px);
            -webkit-backdrop-filter: blur(11.2px);
            border: 1px solid rgba(255, 255, 255, 0.16);
        }
    </style>

{% endblock %}