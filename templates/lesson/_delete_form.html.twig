<form method="post" action="{{ path('app_lesson_delete', {'id': lesson.id}) }}"
      onsubmit="return confirm('Вы действительно хотите удалить данный урок?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lesson.id) }}">
    <button class="btn btn-danger m-3 p-3" style="width: 16rem;">Удалить</button>
</form>
